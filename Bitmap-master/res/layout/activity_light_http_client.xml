<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="10"
    tools:context="cn.com.incito.bitmap_master.LightHttpClientActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_lightHttpClient_jsonGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JsonGet" />

        <Button
            android:id="@+id/btn_lightHttpClient_jsonPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JsonPost" />

        <Button
            android:id="@+id/btn_lightHttpClient_bitmapGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BitmapGet" />

        <Button
            android:id="@+id/btn_lightHttpClient_bitmapPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BitmapPost" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_lightHttpClient_show_json"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <ImageView
        android:id="@+id/img_lightHttpClient_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

</LinearLayout>
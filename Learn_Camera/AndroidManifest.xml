<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learn_camera"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PictureFromAlbum"
            android:label="@string/title_activity_picture_from_album"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".SurfaceCamera"
            android:label="@string/title_activity_surface_camera"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".PictureFromMediaStore"
            android:label="@string/title_activity_take_picture_from_media_store"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>